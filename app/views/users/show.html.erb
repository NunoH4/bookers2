<div class="container">
  <div class="row">
    <div class="col-3">
      
      <!--<h2>User info</h2>-->
      <!--<%= image_tag @user.get_profile_image(100,100) %>-->
      <!--<table class="table">-->
      <!--  <tr><th>name</th><td><%= @user.name %></td></tr>-->
      <!--  <tr><th>introduction</th><td><%= @user.introduction %></td></tr>-->
      <!--</table>-->
      <%= render 'user_info', user: @user %>
      
      
      <div>
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do  %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% else %>  
          <%= link_to user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do  %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>
      
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
      
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, :class => 'form-control book_title' %>
      </div>
      
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, :class => 'form-control book_opinion'  %>
      </div>
      
      <div><%= f.submit "Create Book", class: "btn btn-success" %></div>
      <% end %>
    </div>
    
    <div class="col-8 offset-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(80,80) %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>



  </div>
</div>