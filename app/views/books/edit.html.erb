<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <div>
    <label for="inputTitle">Title</label>
    <%= f.text_field :title, id:"inputTitle" %>
  </div>
  <div>
    <label for="inputOpinion">Opinion</label>
    <%= f.text_field :body, id:"inputOpinion" %>
  </div>
  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>
