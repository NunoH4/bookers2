<div class="container">
  <div class="row">
    <%= render 'side', user: @user, book: @book %>

    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
           <tr>
            <td><%= image_tag @book.user.get_profile_image(100,100) %><br><%= link_to @book.user.name, user_path(@book.user_id) %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book.id),  class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>