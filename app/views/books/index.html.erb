<main>
  <div>
    <div>
      <h2>User info</h2>

      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <div class="field">
          <label>Title</label>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <label>Opinion</label>
          <%= f.text_field :body %>
        </div>

        <div>
          <%= f.submit 'Create Book' %>
        </div>
      <% end %>
    </div>
    
    <div>
      <h2>Books</h2>
    </div>
  </div>
</main>

