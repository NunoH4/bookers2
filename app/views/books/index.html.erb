<div>
  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table crass="table">
    <tr><th>name</th><td><%= current_user.name %></td></tr>
    <tr><th>introduction</th><td><%= current_user.introduction %></td></tr>
  </table>
  
  <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary' do  %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>

    <div>
      <button type="submit" class="btn btn-success">Create Book</button>
    </div>
  <% end %>
</div>



<h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
